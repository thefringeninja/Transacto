    },
    "receiptOfGoodsItems": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/receiptOfGoodsItem"
      }
    }
  },
  "definitions": {
    "address": {
      "type": "object",
      "title": "Address",
      "additionalProperties": false,
      "required": [
        "name",
        "street",
        "city",
        "country"
      ],
      "properties": {
        "name": {
          "type": "string",
          "title": "Name"
        },
        "street": {
          "type": "string",
          "title": "Street"
        },
        "city": {
          "type": "string",
          "title": "City"
        },
        "country": {
          "type": "string",
          "title": "Country"
        }
      }
    },
    "receiptOfGoodsItem": {
      "type": "object",
      "title": "Item",
      "additionalProperties": false,
      "required": [
        "sku",
        "itemId",
        "quantity",
        "unitPrice"
      ],
      "properties": {
        "sku": {
          "type": "string",
          "title": "SKU"
        },
        "itemId": {
